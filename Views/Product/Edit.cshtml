@model EmployeeManagement.Models.Product.Product

@{
    ViewData["Title"] = "Edit Product Page";
}

<div class="d-flex justify-content-between align-items-center">
    <h1>Edit a product : </h1>
    <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

<form asp-action="Edit" class="mt-3" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mt-5 form-group">
        <label asp-for="ProductName" class="form-label"></label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>
    <div class="mt-5 form-group">
        <label asp-for="Unit" class="form-label"></label>
        <input asp-for="Unit" class="form-control"/>
        <span asp-validation-for="Unit" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>