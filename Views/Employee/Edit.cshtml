@model EmployeeManagement.Models.Employee.Employee

@{
    ViewData["Title"] = "Edit Employee Page";
}

<div class="d-flex justify-content-between align-items-center">
    <h1>Edit Employee : </h1>
    <a asp-controller="Employee" asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

<form asp-action="Edit" method="post"class="mt-3">
    <input type="hidden" asp-for="Id" />

    <div class="mt-5 form-group">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="ContactNo" class="form-label"></label>
        <input asp-for="ContactNo" class="form-control" />
        <span asp-validation-for="ContactNo" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="IsWorking" class="form-label"></label>
        <input asp-for="IsWorking" type="checkbox" class="form-check-input" />
        <span asp-validation-for="IsWorking" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>
